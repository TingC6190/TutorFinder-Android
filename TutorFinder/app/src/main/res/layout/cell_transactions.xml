<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <!--<com.makeramen.roundedimageview.RoundedImageView-->
        <!--android:id="@+id/cell_transaction_picture"-->
        <!--android:layout_width="70dp"-->
        <!--android:layout_height="70dp"-->
        <!--android:layout_marginTop="16dp"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:src="@mipmap/ic_launcher_round"-->
        <!--app:riv_corner_radius="30dip"-->
        <!--app:riv_oval="true"-->
        <!--android:background="@mipmap/ic_launcher_round"-->
        <!--/>-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cell_transaction_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:civ_border_width="1.5dp"
        app:civ_border_color="@color/darkGray"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cell_transaction_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="@string/first_last"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/cell_transaction_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/darkGray"
            android:text="Price"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:orientation="vertical">


        <View
            android:id="@+id/transaction_favorite_button_checked"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginStart="16dp"
            android:background="@drawable/heart_checked"
            android:visibility="visible" />

        <View
            android:id="@+id/transaction_favorite_button_unchecked"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-24dp"
            android:background="@drawable/heart_unchecked"
            android:visibility="visible" />

        <TextView
            android:id="@+id/cell_transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="01/01/2018"/>

    </LinearLayout>




</LinearLayout>