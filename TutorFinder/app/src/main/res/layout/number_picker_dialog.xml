<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="192dp"
    android:layout_height="match_parent"
    android:background="#ABABAB">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/num_picker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/numPickerDarkGray"
            android:solidColor="@color/numPickerDarkGray"
            android:theme="@android:style/Theme.DeviceDefault.Dialog">

        </NumberPicker>

        <NumberPicker
            android:id="@+id/num_picker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/numPickerDarkGray"
            android:solidColor="@color/numPickerDarkGray"
            android:theme="@android:style/Theme.DeviceDefault.Dialog">

        </NumberPicker>

        <NumberPicker
            android:id="@+id/num_picker3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/numPickerDarkGray"
            android:solidColor="@color/numPickerDarkGray"
            android:theme="@android:style/Theme.DeviceDefault.Dialog">

        </NumberPicker>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/num_picker_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_weight="0.5"
            android:background="@color/numPickerDarkGray"
            android:textColor="#F3F3F3"
            android:textAllCaps="false"
            android:text="Cancel"/>

        <Button
            android:id="@+id/num_picker_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/numPickerDarkGray"
            android:textColor="#F3F3F3"
            android:textAllCaps="false"
            android:text="Confirm"/>

    </LinearLayout>




</LinearLayout>